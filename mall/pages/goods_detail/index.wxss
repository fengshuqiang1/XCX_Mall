page{
  padding-bottom: 90rpx;
}
.detail_swiper swiper{
  height: 65vw;
}
.detail_swiper swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail_swiper swiper image{
  width: 60%;
}

.goods_price{
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  padding: 15rpx;
}
.goods_name_now{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.goods_name{
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect{
  border-left: 1px solid #999;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods_collect text{
  color: var(--themeColor);
}
.goods_info_title{
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btm_tool{
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  background-color: #fff;
}
.tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_cart,.btn_buy{
  flex: 2;
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
}
.btn_cart{
  background-color: #ffa500;
}
.btn_buy{
  background-color: #eb4450;
}