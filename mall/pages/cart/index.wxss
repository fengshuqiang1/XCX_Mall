.address_btn{
  padding: 20rpx;
}
.address_container{
  padding: 20rpx;
  border-bottom: 1px solid #eb4450;
}
.address{
  display: flex;
  justify-content: space-between;
}
.address_detail{
  margin-top: 10rpx;
}
/* 购物车商品列表 */
.cart_title{
  font-size: 36rpx;
  padding: 20rpx;
  border-bottom: 1px solid #eb4450;
}
.cart_item{
  display: flex;
  padding: 10rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;

}
.cart_cb{
  flex: 1;
}
.goods_img{
  flex: 2;
}
.goods_img image{
  width: 80%;
}
.goods_info{
  flex: 4;
  display: flex;
  flex-direction: column;
}
.goods_name{
  color: #666;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_action{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.goods_price{
  font-size: 34rpx;
  color: var(--themeColor);
  font-weight: 600;
}
.goods_tool{
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_tool button{
  width: 55rpx;
  height: 55rpx;
  padding: 0;
  margin: 0;
  overflow: visible;
  line-height: 55rpx;
}
.goods_tool text{
  margin: 0 10rpx;
}
/* 底部工具栏 */
.footer_tool{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.all_chk_wrap{
  flex: 2;
  padding-left: 20rpx;
}
.total_price_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 20rpx;
}
.total_price_text{
  color: var(--themeColor);
  font-weight: 600;
  font-size: 32rpx;
}
.order_pay_wrap{
  height: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
}
.noGoods{
  padding-top: 40rpx;
  text-align: center;
}